<div class="container">
  <h1>Sign Up</h1>

  <%= form_for(@user) do |f| %>
    <%= f.label :email_address %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Create Account" %>
  <% end %>
</div>